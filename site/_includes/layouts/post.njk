---
layout: layouts/base.njk
templateClass: tmpl-post
---

<style>
  {{"site/_includes/layouts/post.scss" | sass | safe}}
</style>

{% if code %}
  <link href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.19.0/themes/prism-tomorrow.min.css" rel="stylesheet" />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.19.0/components/prism-core.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.19.0/plugins/autoloader/prism-autoloader.min.js"></script>
{% endif %}
<article class="article px-4 md:px-0 container mx-auto ">
  <header class="mb-4">
    <time class="block mx-auto max-w-xl" datetime="{{date}}">{{date | date}}</time>
    <h1 class="font-bold text-2xl text-4xl mb-2 antialiased mx-auto max-w-3xl">{{title}}</h1>
    {% if featured_image %}
      <figure>
        <img class="object-cover h-64 w-full" {% if featured_image.alt %} alt="{{featured_image.alt}}" {% endif %} class="article__hero" loading="lazy" heigth="356" width="576" src="{{featured_image.src | url}}">
        {% if featured_image.caption %}
          <figcaption class="mx-auto max-w-3xl text-xs pt-2">{{featured_image.caption | safe}}</figcaption>
        {% endif %}
      </figure>
    {% endif %}
  </header>
  <section class="leading-relaxed mx-auto max-w-3xl">
    {{ content | safe }}
  </section>
</article>