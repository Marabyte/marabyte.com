<style>
  {{"site/_includes/components/card/card.scss" | sass | safe}}
</style>

<article class="postcard mb-8">
    <header class="mb-4">
        <small class="block">Posted on <time datetime="{{post.data.date}}">{{post.data.date | date}}</time></small>
        <h5 class="font-bold text-3xl mb-2 antialiased">{{post.data.title}}</h5>
        {% if post.data.thumbnail %}
        <img class="w-full" async height="276" width="576" src="{{post.data.thumbnail | url}}">
        {% endif %}
    </header>
    <p class="leading-relaxed mb-4">{{post.data.summary}}</p>
    <footer>
        <a href="{{post.url}}">Read more</a>
    </footer>
</article>