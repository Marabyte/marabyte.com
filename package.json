  "bugs": {
    "url": "https://github.com/Marabyte/marabyte.com/issues"
  },
  "homepage": "https://github.com/Marabyte/marabyte.com#readme",
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-plugin-rss": "^1.0.7",
    "@sardine/eleventy-plugin-code-highlighter": "^1.1.2",
    "@sardine/eleventy-plugin-external-links": "^1.3.1",
    "@sardine/eleventy-plugin-image-optimiser": "^1.1.2",
    "@sardine/eleventy-plugin-tinycss": "^1.5.0",
    "@sardine/eleventy-plugin-tinyhtml": "^0.1.0",
    "markdown-it": "^10.0.0",
