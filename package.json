{
  "name": "marabyte",
  "version": "1.0.0",
  "description": "Home of the Marabyte",
  "main": "index.js",
  "scripts": {
    "build": "npm run tailwind && ELEVENTY_ENV=production npx @11ty/eleventy --input=site",
    "start": "npm run tailwind && ELEVENTY_ENV=development npx @11ty/eleventy --input=site --serve",
    "tailwind": "npx tailwindcss-cli build ./site/_assets/styles/tailwind.css -o ./_site/assets/styles/tailwind.css --no-autoprefixer",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Marabyte/marabyte.com.git"
  },
  "keywords": [
    "JAM",
    "Stack",
    "11ty",
    "netlify"
  ],
